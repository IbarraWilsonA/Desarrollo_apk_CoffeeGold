<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComprasActicity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:background="@drawable/img4"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/img7" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="245dp"
                android:background="@drawable/img6" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="80dp"
            android:fontFamily="cursive"
            android:text="Ameriacano"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="80dp"
            android:fontFamily="serif"
            android:text="Con leche Chocolatada"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="150dp"
            android:text="4.2  ⭐"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="165dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Tamaño de taza"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white_suce"
            android:orientation="horizontal"
            android:text="Pequeño"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:cornerRadius="15dp" />


        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#0F986D"
            android:orientation="horizontal"
            android:text="Mediano"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/white_suce"
            android:orientation="horizontal"
            android:text="Grande"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Descripción"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="386dp"
            android:layout_height="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Disfruta de la perfecta fusión entre la intensidad del café americano y la suavidad de la leche chocolatada en esta deliciosa creación. La base robusta del café americano se equilibra de manera armoniosa con la cremosidad de la leche chocolatada, creando una experiencia única para tu paladar. Cada sorbo te envuelve con la riqueza del café, mientras que el toque indulgente del chocolate en la leche agrega una nota decadente y reconfortante."
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white_suce"
            android:orientation="horizontal"
            android:text="Café         |         Leche       |        Chocoladata"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:orientation="horizontal"
            android:text="Añadir al Carrito                 |                  $  4.25"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:cornerRadius="20dp" />

    </LinearLayout>


</LinearLayout>